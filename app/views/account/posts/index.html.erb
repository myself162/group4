<div class="span12">

  <table class="table">
    <thead>
      <tr>
        <td> Content </td>
        <td> Group Name </td>
        <td> Last Update </td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td> <%= post.content %> </td>
        <td> <%= post.group.title %> </td>
        <td> <%= post.updated_at %> </td>
        <td> <%= link_to("Edit", edit_group_post_path(post.group, post), :class => "btn btn-mini") %> </td>
        <td> <%= link_to("Delete", group_post_path(post.group, post), :class => "btn btn-mini", :method => :delete, :comfirm => "Are you kidding!??") %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>